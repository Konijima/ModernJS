{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2022",
    "checkJs": true,
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@modernjs/core": ["../core/index.js"]
    },
    "plugins": [
      { "name": "@modernjs/language-service" }
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
